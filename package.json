{
  "name": "livego-unified",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --exec \"node --no-warnings --loader ts-node/esm\" server.ts",
    "build": "npm run server:build && npm run build:frontend",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "node dist-server/server.js",
    "server:start": "node dist-server/server.js",
    "server:build": "tsc -p tsconfig.server.json",
    "vps:deploy": "pm2 startOrRestart ecosystem.config.cjs --env production",
    "vps:stop": "pm2 stop ecosystem.config.cjs",
    "vps:delete": "pm2 delete ecosystem.config.cjs",
    "vps:logs": "pm2 logs livego-backend",
    "vps:status": "pm2 status"
  },
  "dependencies": {
    "@aws-sdk/client-sesv2": "^3.0.0",
    "@aws-sdk/credential-provider-node": "^3.0.0",
    "@types/express-rate-limit": "^6.0.2",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.5",
    "@types/uuid": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.468.0",
    "mercadopago": "^2.12.0",
    "mongoose": "^8.0.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.12",
    "obs-websocket-js": "^4.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sendpulse-api": "^1.1.7",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^2.5.5",
    "uuid": "^13.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.30",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "axios": "^1.13.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.49",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.0.3"
  }
}
